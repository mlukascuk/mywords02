<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Target</th>
      <th>Word class</th>
      <th>Target sample 0</th>
      <th>Target sample 1</th>
      <th>Target sample 2</th>
      <th>Native</th>
      <th>Native sample 0</th>
      <th>Native sample 1</th>
      <th>Native sample 2</th>
      <th>Created</th>
      <th>Learn state</th>
      <th>Next schedule</th>
      <th>Last schedule</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.owner_id %></td>
        <td><%= word.target %></td>
        <td><%= word.word_class %></td>
        <td><%= word.target_sample_0 %></td>
        <td><%= word.target_sample_1 %></td>
        <td><%= word.target_sample_2 %></td>
        <td><%= word.native %></td>
        <td><%= word.native_sample_0 %></td>
        <td><%= word.native_sample_1 %></td>
        <td><%= word.native_sample_2 %></td>
        <td><%= word.created %></td>
        <td><%= word.learn_state %></td>
        <td><%= word.next_schedule %></td>
        <td><%= word.last_schedule %></td>
        <td><%= word.image %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

